---
import { Menu } from "lucide-astro";
---

<nav
  class="px-4 py-2 border-b border-[#dbd3d2] flex justify-between items-center fixed top-0 left-0 right-0 bg-white z-50"
>
  <img src="../../../public/logo.svg" alt="" class="h-14" />
  <div class="hidden md:flex gap-4">
    <a
      href="/"
      class="bg-[#f0bbbe] px-4 py-2 rounded-md hover:bg-[#d6a4bd] transition-colors duration-300"
      >Contacto</a
    >
  </div>
  <div
    class="md:hidden cursor-pointer text-[#d6a4bd] border border-[#dbd3d2] rounded-md p-2"
  >
    <Menu />
  </div>
  <div
    id="menu"
    class="absolute md:hidden top-14 left-0 w-full bg-white border-[#dbd3d2] flex flex-col gap-2 overflow-hidden transition-all duration-300 ease-in-out max-h-0"
  >
    <a
      href="mailto:sedata2024@gmail.com"
      class="hover:bg-[#f0bbbe] bg-opacity-20 bg-[#f0bbbe] hover:bg-opacity-80 mx-4 px-4 py-2 mb-4 rounded-md transition-colors duration-300"
      >Contacto</a
    >
  </div>
</nav>

<style>
  .menu-open {
    max-height: 300px;
  }
</style>

<script>
  const menu = document.getElementById("menu");
  const menuButton = document.querySelector(".md\\:hidden");

  menuButton?.addEventListener("click", () => {
    menu?.classList.toggle("menu-open");
    menu?.classList.toggle("border-b border-slate-200 py-4");
  });
</script>
